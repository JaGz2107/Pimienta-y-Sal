<!DOCTYPE html>
<html>
  <head>
  <%- include('./partials/head') %>
   </head>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/Navbar') %>
        <!-- Right-sided navbar links. Hide them on small screens -->
        <%- include('./partials/Right-sided') %>

    <!-- Header -->
    <%- include('./partials/header') %>

    <!-- Page content -->
    <%- include('./partials/Page-content') %>

      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <img
            src="/images/<%= about.img %>"
            class="ps-round ps-image ps-opacity-min"
            alt="<% about.tittle %>"
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
          <h1 class="ps-center">Pimienta & Sal</h1>
          <br />
          <p class="ps-large">
            <%= about.descripcion1 %>
            <span class="ps-tag ps-light-grey"> </span>
          </p>
          <p class="ps-large ps-text-grey ps-hide-medium">
            <%= about.descripcion2 %>
          </p>
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>
          <br />

          <% data.forEach((plato) => { %>
            <h4>
              <%= plato.nombre %>
            </h4>
            <p class="ps-text-grey">
              <%= plato.descripcion %> <%= plato.precio %>
            </p>
            <br />
          <% }) %>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer') %>
    </div>
  </body>
</html>
